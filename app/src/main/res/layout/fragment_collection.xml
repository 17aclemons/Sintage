<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/frameLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/red_bg"
    tools:context=".CollectionFragment">


    <ListView
        android:id="@+id/listViewer"
        android:layout_width="392dp"
        android:layout_height="549dp"
        android:layout_marginBottom="32dp"
        android:background="@drawable/achievement_box"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.473"
        app:layout_constraintStart_toStartOf="parent"></ListView>

    <View
        android:id="@+id/collDiv"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="?android:attr/listDivider"
        app:layout_constraintBottom_toTopOf="@+id/listViewer"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.913"
        tools:layout_editor_absoluteX="10dp" />

    <Button
        android:id="@+id/favoritesButton"
        android:layout_width="136dp"
        android:layout_height="47dp"
        android:layout_marginStart="232dp"
        android:text="Favorites"
        app:layout_constraintBottom_toTopOf="@+id/collDiv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

    <Button
        android:id="@+id/collectionButton"
        android:layout_width="136dp"
        android:layout_height="47dp"
        android:layout_marginStart="48dp"
        android:text="Collection"
        app:layout_constraintBottom_toTopOf="@+id/collDiv"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.75" />

</androidx.constraintlayout.widget.ConstraintLayout>
